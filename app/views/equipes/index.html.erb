<%= render 'main/nav'%>
<main>
  <div class="main-content">
    <div class="main-top">
      <h1>Equipes</h1>
    </div>
    <%= link_to "+ Criar Equipe", new_equipe_path, class: "btn-add" %>
    <div class="main-info">
      <% @equipes.each do |equipe| %>
        <%= link_to equipe_path(equipe), class: 'details-button' do %>
          <div class="card-body">
            <div class="status-line"></div>
            <div class="card-info team">
              <%= image_tag("team.svg", class: "logo") %>
              <h1 class="card-nome"><%= equipe.nomeEquipe%></h1>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</main>