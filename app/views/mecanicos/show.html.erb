    <%= render 'main/nav'%>
    <%= link_to inline_svg_tag('GoBack.svg', size: '14x14'), mecanicos_path, class: "voltar" %>

    <div class="main-perfil">
        <div class="perfil">
            <div class="perfil-top">
                <% if @mecanico.adminCode == 1 %>
                    <div class="status-perfil" style="background-color: blue;"></div>
                <% elsif @mecanico.ativarCode == 1 %>
                    <div class="status-perfil"></div>
                <% else %>
                    <div class="status-perfil" style="background-color: red;"></div>
                <% end %>
                <%= image_tag("profile.svg") %>
                <div class="top-info">
                    <p class="nome"><%= @mecanico.nome %></p>
                    <p class="email">Email: <%= @mecanico.email %></p>
                    <p class="endereco">Endereço: <%= @mecanico.endereco%> </p>
                    <p class="telefone">Telefone: <%= @mecanico.telefone %></p>
                </div>
            </div>
            <div class="perfil-bottom">
            <% if current_mecanico.adminCode == 1 && @mecanico.adminCode == 0 %>
            <div class="button-mec">
                <% if @mecanico.ativarCode == 1 %>
                    <%= button_to 'Desativar', deactivate_mecanico_path(@mecanico), method: :post, class: 'editar-button red mec-top' %>
                <% else %>
                    <%= button_to 'Ativar', deactivate_mecanico_path(@mecanico), method: :post, class: 'editar-button green mec-top' %>
                <% end %>
                <div class="button-container">
                    <%= link_to 'Edit', edit_mecanico_path(@mecanico), class: 'editar-button' %>
                    <%= button_to "Deletar", mecanico_path(@mecanico), method: :delete, class: "editar-button red" %>
                </div>
            </div>
            <% end %>
                <main class="perfil-bottom">
                 <div class="main-content">
                   <div class="main-top">
                     <h1>Equipes do Mecânico</h1>
                   </div>
                   <div class="main-info">
                     <% @mecanico.equipes.each do |equipe|  %>
                      <%= link_to equipe_path(equipe), class: 'details-button' do %>
                           <div class="card-body">
                               <div class="status-line"></div>
                               <div class="card-info team">
                                   <%= image_tag("team.svg", class: "logo") %>
                                   <h1 class="card-nome"><%= equipe.nomeEquipe %></h1>
                               </div>
                           </div>
                       <% end %>
                     <% end %>
                   </div>
                 </div>
                </main>
            </div>
      </div>
    </div>